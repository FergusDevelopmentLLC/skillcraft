<div class="full">
  <main class="main">
    <p id="notice"><%= notice %></p>

    <h1>Quizzes</h1>

    <table>
      <thead>
        <tr>
          <th>Classroom</th>
          <th>Topic</th>
          <th>Course</th>
          <th>Teacher</th>
          <th>Type</th>
          <th>Title</th>
          <th>Start date</th>
          <th>End date</th>
          <th>Posted date</th>
          <th>Due date</th>
          <th>Graded</th>
          <th>Points</th>
          <th>Instructions</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @quizzes.each do |quiz| %>
          <tr>
            <td><%= quiz.classroom_id %></td>
            <td><%= quiz.topic_id %></td>
            <td><%= quiz.course_id %></td>
            <td><%= quiz.teacher_id %></td>
            <td><%= quiz.type %></td>
            <td><%= quiz.title %></td>
            <td><%= quiz.start_date %></td>
            <td><%= quiz.end_date %></td>
            <td><%= quiz.posted_date %></td>
            <td><%= quiz.due_date %></td>
            <td><%= quiz.graded %></td>
            <td><%= quiz.points %></td>
            <td><%= quiz.instructions %></td>
            <td><%= link_to 'Show', quiz %></td>
            <td><%= link_to 'Edit', edit_quizzes_path(quiz) %></td>
            <td><%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Quiz', new_quizzes_path %>
  </main>
</div>