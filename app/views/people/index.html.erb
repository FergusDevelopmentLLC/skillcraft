<div class="full">
  <main class="main">
    <p id="notice"><%= notice %></p>
    <h1>People</h1>
    <table>
      <thead>
        <tr>
          <th>User name</th>
          <th>Type</th>
          <th>Password digest</th>
          <th>First name</th>
          <th>Last name</th>
          <th>Email</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @people.each do |person| %>
          <tr>
            <td><%= person.user_name %></td>
            <td><%= person.type %></td>
            <td><%= person.password_digest %></td>
            <td><%= person.first_name %></td>
            <td><%= person.last_name %></td>
            <td><%= person.email %></td>
            <td><%= link_to 'Show', person %></td>
            <td><%= link_to 'Edit', edit_person_path(person) %></td>
            <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br/>
    <hr/>
    <br/>

    <div class="actions">
      <%= link_to  'New Person', new_person_path %> | <%= render :file => "./shared/_actions.html.erb" %><br/>
    </div>
  </main>
</div>
