<div class="full">
  <main class="main">

    <p id="notice"><%= notice %></p>

    <h1>Editing Course</h1>

    <% if @course && @course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
        <% @course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <%= form_with url: "/courses/#{@course.id}", model: @course, local: true, method: "patch" do |form| %>

    <%= form.hidden_field :type, :value => 'Course'%>

    <%= form.hidden_field :id, :value => @course.id%>

    <div class="field">
      <strong><%= form.label :name %></strong>
      <%= form.text_field :name %>
    </div>
    
    <div class="field">
      <strong><%= form.label :featured %></strong>
      <!-- #TODO, why is this not form.check_box_tag -->
      <%= check_box 'course', 'featured', {}, 'true', 'false' %>
    </div>
    
    <div class="field">
      <strong><%= form.label :short_description %></strong>
      <%= form.text_field :short_desc %>
    </div>

    <div class="field">
      <strong><%= form.label :long_description %></strong>
      <%= text_area(:course, :long_desc, cols: 20, rows: 40) %>
    </div>

    <div class="field">
      <strong>Teachers</strong>
      <%if(@course.teachers.count > 0)%>
        <% @course.teachers.each do |teacher| %>
          <div><%=link_to teacher.user_name, teacher_path(teacher)%> < <%=link_to "Withdraw", course_user_path(@course,teacher) %></div>
        <% end %>
      <%else%>
        No teachers
      <%end%>
    </div>

    <div class="field">
      <strong>Students</strong>
      <%if(@course.students.count > 0)%>
        <% @course.students.each do |student| %>
          <div><%=link_to student.user_name, student_path(student)%> < <%=link_to "Withdraw", course_user_path(@course,student) %></div>
        <% end %>
      <%else%>
        No students
      <%end%>
    </div>

    <div class="field">
      <strong>Announcements</strong>
      <%if !@course.announcements.empty? %>
        <% @course.announcements.each do |announcement| %>
          <div>Created date: <%=announcement.created_at %> - <%=link_to announcement.title, announcement_path(announcement)%></div>
        <% end %>
      <%else%>
        No announcements
      <%end%>
    </div>

    <div class="field">
      <strong>Assignments</strong>
      <%if !@course.assignments.empty? %>
        <% @course.assignments.each do |assignment| %>
          <div>Due date: <%=assignment.due_date %> - <%=link_to assignment.title, assignment_path(assignment)%></div>
        <% end %>
      <%else%>
        No assignments
      <%end%>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>

    <% end %>

    <div class="actions">
      <%= link_to 'Courses', courses_path %> | 
      <%= link_to 'Add Announcement', announcements_course_new_path(@course) %> | 
      <%= link_to 'Add Assignment', assignments_course_new_path(@course) %> | 
      <%= render :partial => "actions" %>
    </div>

  </main>
</div>