<div class="full">
    <main class="main">
  
      <p id="notice"><%= notice %></p>
  
      <% if @user.type == "Student" %>
        <h1>Show Student</h1>
      <% else %>
        <h1>Show Teacher</h1>
      <% end %>
  
      <div class="field">
        <div class='avatar-wrapper'>
          <div class='avatar-container'>
            <%= cl_image_tag(@user.avatar.url)  %>
          </div>
        </div>
      </div>
      
      <div class="field">
        <label for="user_name">User name</label>
        <div id="user_name"><%= @user.user_name %></div>
      </div>
      
      <div class="field">
        <label for="first_name">First name</label>
        <div id="first_name"><%= @user.first_name %></div>
      </div>

      <div class="field">
        <label for="last_name">Last name</label>
        <div id="last_name"><%= @user.last_name %></div>
      </div>

      <div class="field">
        <label for="email">Email</label>
        <div id="email"><%= @user.email %></div>
      </div>

      <div class="field">
        <label for="courses">Courses</label>
        <% if !@user.courses.empty? %>
        <div id="courses">
          <% @user.courses.each do |course| %>
            <div><%=link_to course.name, course_path(course)%> < <%=link_to "Withdraw", course_user_path(course, @user) %></div>
          <% end %>
        </div>
        <% else %>
        <div>No courses to display</div>
        <% end %>
      </div>
  
      <div class="actions">
        
        <% if @user.type == "Student" %>
          <%= link_to 'Students', students_path %> | <%=link_to "Edit", edit_student_path %> | <%= render :partial => "actions" %><br />
        <% else %>
          <%= link_to 'Teachers', teachers_path %> | <%=link_to "Edit", edit_teacher_path %> | <%= render :partial => "actions" %><br />
        <% end %>
        
      </div>
  
    </main>
  </div>