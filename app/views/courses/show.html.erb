<div class="full">
  <main class="main">

    <p id="notice"><%= notice %></p>

    <h1>Course: <%= @course.name %></h1>

    <div class="field">
      <label for="name">Name</label>
      <div id="name"><%= @course.name %></div>
    </div>

    <div class="field">
        <label for="name">Name</label>
        <div id="name"><%= number_to_currency(@course.tuition_cost) %></div>
      </div>

    <div class="field">
      <label for="code">Code</label>
      <div id="code"><%= @course.code %></div>
    </div>

    <div class="field">
      <label for="featured">Featured</label>
      <div id="featured"><%= @course.featured %></div>
    </div>

    <div class="field">
      <label for="short_desc">Short description</label>
      <div id="short_desc"><%= @course.short_desc %></div>
    </div>

    <div class="field">
      <label for="long_desc">Long description</label>
      <div id="long_desc"><%= @course.long_desc %></div>
    </div>
    
    <div class="field">
      <label for="announcements">Announcements</label>
      <div id="announcements">
      <% if !@course.announcements.empty? %>
        <% @course.announcements.each do |announcement| %>
          <div>Posted date: <%= announcement.due_date.strftime("%m/%d/%Y") %> - <%= link_to announcement.title, announcement_path(announcement) %> - <%= pluralize(announcement.questions.count, "question") %> asked</div>
        <% end %>
      <% else %>
        <%= render :partial => "none" %>
      <% end %>
    </div>
    </div>

    <div class="field">
      <label for="assignments">Assignments</label>
      <div id="assignments">
      <% if !@course.assignments.empty? %>
        <% @course.assignments.each do |assignment| %>
          <div>Due date: <%= assignment.due_date.strftime("%m/%d/%Y") %> - <%= link_to assignment.title, assignment_path(assignment)%> - <%= pluralize(assignment.completed_assignments.count, "assignment") %> completed</div>
        <% end %>
      <% else %>
        <%= render :partial => "none" %>
      <% end %>
      </div>
    </div>

    <div class="field">
      <label for="teachers">Teachers</label>
      <div id="teachers">
      <% if !@course.teachers.empty? %>
        <% @course.teachers.each do |teacher| %>
          <div><%= link_to teacher.user_name, teacher_path(teacher)%> < <%= link_to "Withdraw", courses_user_path(@course, teacher) %></div>
        <% end %>
      <% else %>
        <%= render :partial => "none" %>
      <% end %>
      </div>
    </div>

    <div class="field">
      <label for="students">Students</label>
      <div id="students">
        <% if !@course.students.empty? %>
        <% @course.students.each do |student| %>
          <div><%= link_to student.user_name, student%> < <%= link_to "Withdraw", courses_user_path(@course, student) %></div>
        <% end %>
        <% else %>
          <%= render :partial => "none" %>
        <% end %>
      </div>
    </div>

    <div class="field">
      <label for="comments">Student comments</label>
      <div id="comments">
        <% if !@course.comments.empty? %>
        <% @course.comments.each do |comment| %>
          <div><%= link_to comment.content, edit_course_path(comment.course) %> - <%= link_to comment.user.user_name, comment.user %> on <%= link_to comment.created_at.strftime("%m/%d/%Y"), edit_course_path(comment.course) %></div>
        <% end %>
        <% else %>
          <%= render :partial => "none" %>
        <% end %>
      </div>
    </div>
    <% if logged_in? %>
      <div class="field">
        <label for="comment">My comment</label>
        <%= form_with id: @form_id, url: @form_comment_url, model: @comment, local: true, method: @form_method do |form| %>
          <%= form.hidden_field "[comment]course_id", value: @course.id %>
          <%= form.hidden_field "[comment]user_id", value: current_user.id %>
          <div id="comment"><%= text_area(:comment, :content, cols: 20, rows: 40) %></div>
        <% end %>
        <div class="update-comment-wrapper">
          <% if @comment %>
          <div class="save-comment-wrapper">
            <%= submit_tag "Update comment", form: @form_id %>
          </div>
          <div class="save-comment-wrapper">
            <%= button_to 'Delete comment', @comment, method: :delete, data: { confirm: 'Are you sure?', form: @form_id } %>
          </div>
          <% else %>
          <div class="save-comment-wrapper">
            <%= submit_tag "Save comment", form: @form_id%>
          </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="actions">
      <%= link_to 'Add Announcement', announcements_course_new_path(@course) %> | 
      <%= link_to 'Add Assignment', assignments_course_new_path(@course) %> | 
      <%= link_to 'Edit', edit_course_path(@course) %> | 
      <%= link_to 'Destroy', @course, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>

  </main>
</div>