<div class="full">
  <main class="main">
    <p id="notice"><%= notice %></p>
    <p>
      <strong>Name:</strong>
      <%= @classroom.name %>
    </p>

    <% if @classroom.courses.count > 0 %>
    <p>
      <strong>Courses:</strong>
      <ul>
        <% @classroom.courses.each {|course| %>
        <li><%= link_to course.name, course_path(course) %></li>
        <% } %>
      <ul>
    </p>
    <% end %>

    <%= link_to 'Edit', edit_classroom_path(@classroom) %> |
    <%= link_to 'Back', classrooms_path %>
  </main>
</div>
