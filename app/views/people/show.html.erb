
<div class="full">
  <main class="main">
    <p id="notice"><%= notice %></p>

    <h1>Show student: <%= @Student.user_name %></h1>

    <p>
      <strong>User name:</strong>
      <%= @Student.user_name %>
    </p>

    <p>
      <strong>Type:</strong>
      <%= @Student.type %>
    </p>

    <p>
      <strong>Password digest:</strong>
      <%= @Student.password_digest %>
    </p>

    <p>
      <strong>First name:</strong>
      <%= @Student.first_name %>
    </p>

    <p>
      <strong>Last name:</strong>
      <%= @Student.last_name %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @Student.email %>
    </p>
    
    <div class="actions">
      <%= link_to 'students', students_path %> | <%= render :file => "./shared/_actions.html.erb" %><br/>
    </div>
    
  </main>
</div>
