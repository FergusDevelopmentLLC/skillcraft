<div class="full">
  <main class="main">
    <p id="notice"><%= notice %></p>

    <h1>Teachers</h1>
    <table>
      <thead>
        <tr>
          <th>User name</th>
          <th>Type</th>
          <th>Password digest</th>
          <th>First name</th>
          <th>Last name</th>
          <th>Email</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @teachers.each do |teacher| %>
        <tr>
          <td><%= teacher.user_name %></td>
          <td><%= teacher.type %></td>
          <td><%= teacher.password_digest.truncate(10) %></td>
          <td><%= teacher.first_name %></td>
          <td><%= teacher.last_name %></td>
          <td><%= teacher.email %></td>
          <td><%= link_to 'Show', teacher_path(teacher) %></td>
          <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
          <td><%= link_to 'Destroy', teacher_path(teacher), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <div class="actions">
      <%= link_to 'New Teacher', new_teacher_path %> | <%= render :file => "./shared/_actions.html.erb" %><br />
    </div>

  </main>
</div>