<div class="full">
  <main class="main">

    <p id="notice"><%= notice %></p>

    <h1>Courses</h1>
    <% if !@courses.empty? %>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Short description</th>
          <th>Announcements</th>
          <th>Questions</th>
          <th>Assignments</th>
          <th>Completed assignments</th>
          <th>Teachers</th>
          <th>Students</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @courses.each do |course| %>
        <tr>
          <% if course.featured %>
          <td><strong><%= course.name %></strong></td>
          <% else %>
          <td><%= course.name %></td>
          <% end %>
          <td><%= course.short_desc %></td>
          <td><%= course.announcements.count %></td>
          <td><%= course.questions.count %></td>
          <td><%= course.assignments.count %></td>
          <td><%= course.completed_assignments.count %></td>
          <td><%= course.teachers.count %></td>
          <td><%= course.students.count %></td>
          <td><%= link_to 'Show', course_path(course) %></td>
          <td><%= link_to 'Edit', edit_course_path(course) %></td>
          <td><%= link_to 'Destroy', course_path(course), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%else%>
    <p>No courses to display</p>
    <%end%>
    <div class="actions">
      <%= link_to 'New Course', new_course_path %> | <%= render :partial => "actions" %><br />
    </div>

  </main>
</div>