<div class="full">
  <main class="main">

    <p id="notice"><%= notice %></p>

    <h1>Sign up</h1>

    <% if @person && @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
        <% @person.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <%= form_with url: "/people", model: @person, local: true, method: "post" do |form| %>

    <div class="field">
      <%= form.label :user_name %>
      <%= form.text_field :user_name %>
    </div>

    <div class="field">
      <%= form.label :password_digest %>
      <%= form.text_field :password_digest %>
    </div>

    <div class="field">
      <%= form.label :first_name %>
      <%= form.text_field :first_name %>
    </div>

    <div class="field">
      <%= form.label :last_name %>
      <%= form.text_field :last_name %>
    </div>

    <div class="field">
      <%= form.label :email %>
      <%= form.text_field :email %>
    </div>

    <div class="field">
      <label for="email">Join Course (enter code)</label>
      <%= form.text_field :course_code %>
    </div>

    <div class="field">
      <label for="person_type">I am a ...</label>
      <%= collection_select(:person, :type, @people, :type, :type, include_blank: '-Please select-')%>
    </div>

    <div class="actions">
      <%= submit_tag "Sign up" %>
    </div>

    <% end %>

    <div class="actions">
      <%= link_to 'Courses', courses_path %> | <%= render :file => "./shared/_actions.html.erb" %><br />
    </div>
  </main>
</div>