<div class="full">
  <main class="main">

    <p id="notice"><%= notice %></p>

    <h1><%= @index_title ? @index_title : "Responses" =%></h1>

    <table>
      <thead>
        <tr>
          <th>Course</th>
          <th>Interaction</th>
          <th>Response</th>
          <th>Student</th>
          <th>Type</th>
          <th>Content</th>
          <th>Score</th>
          <th>Letter grade</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @responses.each_with_index do |response, index| %>
        <tr>
          <td><%= response.interaction.course.name %></td>
          <td><%= response.interaction.title %></td>
          <td><%= response.title %></td>
          <td><%= response.user.user_name %></td>
          <td><%= response.type %></td>
          <td><%= response.content %></td>
          <td><%= response.score %></td>
          <td><%= response.letter_grade %></td>

          <td><%= link_to 'Show', response_path(response) %></td>
          <td><%= link_to 'Edit', edit_response_path(response) %></td>
          <td><%= link_to 'Destroy', response_path(response), method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>

        </tr>
        <% end %>
      </tbody>
    </table>

    <div class="actions">
      <%= render :partial => "actions" %><br />
    </div>

  </main>
</div>