<div class="full">
  <main class="main">
    <p id="notice"><%= notice %></p>

    <h1>Interactions</h1>

    <table>
      <thead>
        <tr>
          <th>Classroom</th>
          <th>Topic</th>
          <th>Course</th>
          <th>Teacher</th>
          <th>Type</th>
          <th>Title</th>
          <th>Start date</th>
          <th>End date</th>
          <th>Posted date</th>
          <th>Due date</th>
          <th>Graded</th>
          <th>Points</th>
          <th>Instructions</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @interactions.each do |interaction| %>
          <tr>
            <td><%= interaction.classroom_id %></td>
            <td><%= interaction.topic_id %></td>
            <td><%= interaction.course_id %></td>
            <td><%= interaction.teacher_id %></td>
            <td><%= interaction.type %></td>
            <td><%= interaction.title %></td>
            <td><%= interaction.start_date %></td>
            <td><%= interaction.end_date %></td>
            <td><%= interaction.posted_date %></td>
            <td><%= interaction.due_date %></td>
            <td><%= interaction.graded %></td>
            <td><%= interaction.points %></td>
            <td><%= interaction.instructions %></td>
            <td><%= link_to 'Show', interaction %></td>
            <td><%= link_to 'Edit', edit_interaction_path(interaction) %></td>
            <td><%= link_to 'Destroy', interaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Interaction', new_interaction_path %>
  </main>
</div>