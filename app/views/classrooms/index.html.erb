<div class="full">
  <main class="main">
    <p id="notice"><%= notice %></p>
    <h1>Classrooms</h1>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @classrooms.each do |classroom| %>
          <tr>
            <td><%= classroom.name %></td>
            <td><%= link_to 'Show', classroom %></td>
            <td><%= link_to 'Edit', edit_classroom_path(classroom) %></td>
            <td><%= link_to 'Destroy', classroom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br/>
    <hr/>
    <br/>
    
    <div class="actions">
      <%= link_to  'New Classroom', new_classroom_path %> | <%= render :file => "./shared/_actions.html.erb" %><br/>
    </div>
  </main>
</div>
