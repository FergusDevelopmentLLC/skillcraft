
<div class="full">
  <main class="main">
    <p id="notice"><%= notice %></p>

    <h1>Show Person: <%= @person.user_name %></h1>

    <p>
      <strong>User name:</strong>
      <%= @person.user_name %>
    </p>

    <p>
      <strong>Type:</strong>
      <%= @person.type %>
    </p>

    <p>
      <strong>Password digest:</strong>
      <%= @person.password_digest %>
    </p>

    <p>
      <strong>First name:</strong>
      <%= @person.first_name %>
    </p>

    <p>
      <strong>Last name:</strong>
      <%= @person.last_name %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @person.email %>
    </p>
    
    <div class="actions">
      <%= link_to 'People', people_path %> | <%= render :file => "./shared/_actions.html.erb" %><br/>
    </div>
    
  </main>
</div>
