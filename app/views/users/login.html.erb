<div class="full">
  <main class="main">
    <p id="notice"><%= notice %></p>
    <h1>Login</h1>
    <% if @user && @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <%= form_with url: "/post_login", model: @user, local: true, method: "get" do |form| %>

    <%= form.hidden_field :type, :value => 'User'%>

    <div class="field">
      <%= form.label :user_name %>
      <%= form.text_field :user_name %>
    </div>

    <div class="field">
      <%= form.label :password %>
      <%= form.text_field :password %>
    </div>

    <div class="actions">
      <%= submit_tag "Login" %>
    </div>

    <div class="signin-twitter-or">-OR-</div>

    <div class="signin-twitter-wrapper">
      <%= link_to image_tag("https://res.cloudinary.com/fergusdev/image/upload/v1589306122/skillcraft/sign-in-with-twitter-gray-png-img-fullhd-medium.png.img.fullhd.medium_z3ei0p.png", border: 0), signin_twitter_path %>
    </div>
    <% end %>

  </main>
</div>