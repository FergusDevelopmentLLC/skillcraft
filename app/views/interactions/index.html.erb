f<div class="full">
  <main class="main">
    <h1><%= @index_title ? @index_title : "Interactions" =%></h1>
    <p id="notice"><%= notice %></p>
    <% if !@interactions.empty? %>
    <table>
      
      <thead>
        <tr>
          <th>Course</th>
          <th>Title</th>
          <th>Due date</th>
          <th>Graded</th>
          <th>Points</th>
          <th>Responses</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @interactions.each do |interaction| %>
        <tr>
          <td><%= interaction.course.name %></td>
          <td><%= interaction.title %></td>
          <td><%= interaction.due_date %></td>
          <td><%= interaction.graded %></td>
          <td><%= interaction.points %></td>
          <td><%= interaction.responses.count %></td>
          <td><%= link_to 'Show', interaction_path(interaction) %></td>
          <td><%= link_to 'Edit', edit_interaction_path(interaction) %></td>
          <td><%= link_to 'Destroy', interaction_path(interaction), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <% else %>
    <p style="text-align: center;">-chirp, chirp-</p>
    <% end %>
    <div class="actions">
      <%= render :partial => "actions" %><br />
    </div>
  </main>
</div>
