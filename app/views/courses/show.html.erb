<div class="full">
  <main class="main">

    <p id="notice"><%= notice %></p>

    <h1>Show Course: <%= @course.name %></h1>

    <p>
      <strong>Name:</strong><br/>
      <%= @course.name %>
    </p>

    <p>
      <strong>Code:</strong><br/>
      <%= @course.code %>
    </p>
    
    <p>
      <strong>Teachers:</strong>
      <br/>
      <%if(@course.teachers.count > 0)%>
        <% @course.teachers.each do |teacher| %>
          <%=link_to teacher.user_name, teacher_path(teacher)%> < <%=link_to "Withdraw", course_person_path(@course, teacher) %><br/>
        <% end %>
      <%else%>
        No teachers
      <%end%>
    </p>

    <p>
      <strong>Students:</strong>
      <br/>
      <%if(@course.students.count > 0)%>
        <% @course.students.each do |student| %>
          <%=link_to student.user_name, student_path(student)%> < <%=link_to "Withdraw", course_person_path(@course, student) %><br/>
        <% end %>
      <%else%>
        No students
      <%end%>
    </p>

    <div class="actions">
      <%= link_to 'Courses', courses_path %> | <%= render :file => "./shared/_actions.html.erb" %><br />
    </div>

  </main>
</div>