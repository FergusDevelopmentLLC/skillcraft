<div class="full">
  <main class="main">
    <p id="notice"><%= notice %></p>

    <h1>Show Quiz: <%= @quiz.title %></h1>

    <p>
      <strong>Classroom:</strong>
      <%= @quiz.classroom.name %>
    </p>

    <p>
      <strong>Topic:</strong>
      <%= @quiz.topic.title %>
    </p>

    <p>
      <strong>Course:</strong>
      <%= @quiz.course.name %>
    </p>

    <p>
      <strong>Teacher:</strong>
      <%= @quiz.person.user_name %>
    </p>

    <p>
      <strong>Type:</strong>
      <%= @quiz.type %>
    </p>

    <p>
      <strong>Title:</strong>
      <%= @quiz.title %>
    </p>

    <p>
      <strong>Start date:</strong>
      <%= @quiz.start_date %>
    </p>

    <p>
      <strong>End date:</strong>
      <%= @quiz.end_date %>
    </p>

    <p>
      <strong>Posted date:</strong>
      <%= @quiz.posted_date %>
    </p>

    <p>
      <strong>Due date:</strong>
      <%= @quiz.due_date %>
    </p>

    <p>
      <strong>Graded:</strong>
      <%= @quiz.graded %>
    </p>

    <p>
      <strong>Points:</strong>
      <%= @quiz.points %>
    </p>

    <p>
      <strong>Instructions:</strong>
      <%= @quiz.instructions %>
    </p>
    
    <div class="actions">
      <%= link_to 'Quizzes', quizzes_path %> | <%= render :file => "./shared/_actions.html.erb" %><br/>
    </div>
    
  </main>
</div>