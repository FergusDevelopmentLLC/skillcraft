<div class="full">
  <main class="main">
    <p id="notice"><%= notice %></p>

    <h1>Assignments</h1>

    <table>
      <thead>
        <tr>
          <th>Classroom</th>
          <th>Topic</th>
          <th>Course</th>
          <th>Teacher</th>
          <th>Type</th>
          <th>Title</th>
          <th>Start date</th>
          <th>End date</th>
          <th>Posted date</th>
          <th>Due date</th>
          <th>Graded</th>
          <th>Points</th>
          <th>Instructions</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @assignments.each do |question| %>
          <tr>
            <td><%= question.classroom_id %></td>
            <td><%= question.topic_id %></td>
            <td><%= question.course_id %></td>
            <td><%= question.teacher_id %></td>
            <td><%= question.type %></td>
            <td><%= question.title %></td>
            <td><%= question.start_date %></td>
            <td><%= question.end_date %></td>
            <td><%= question.posted_date %></td>
            <td><%= question.due_date %></td>
            <td><%= question.graded %></td>
            <td><%= question.points %></td>
            <td><%= question.instructions %></td>
            <td><%= link_to 'Show', question %></td>
            <td><%= link_to 'Edit', edit_question_path(question) %></td>
            <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

   <div class="actions">
      <%= link_to  'New Assignment', new_assignment_path %> | <%= render :file => "./shared/_actions.html.erb" %><br/>
    </div>
  </main>
</div>