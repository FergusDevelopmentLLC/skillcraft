<div class="full">
  <main class="main">
    <p id="notice"><%= notice %></p>

    <h1>Show Post: <%= @post.title %></h1>

    <p>
      <strong>Classroom:</strong>
      <%= @post.classroom.name %>
    </p>

    <p>
      <strong>Topic:</strong>
      <%= @post.topic.title %>
    </p>

    <p>
      <strong>Course:</strong>
      <%= @post.course.name %>
    </p>

    <p>
      <strong>Teacher:</strong>
      <%= @post.person.user_name %>
    </p>

    <p>
      <strong>Type:</strong>
      <%= @post.type %>
    </p>

    <p>
      <strong>Title:</strong>
      <%= @post.title %>
    </p>

    <p>
      <strong>Start date:</strong>
      <%= @post.start_date %>
    </p>

    <p>
      <strong>End date:</strong>
      <%= @post.end_date %>
    </p>

    <p>
      <strong>Posted date:</strong>
      <%= @post.posted_date %>
    </p>

    <p>
      <strong>Due date:</strong>
      <%= @post.due_date %>
    </p>

    <p>
      <strong>Graded:</strong>
      <%= @post.graded %>
    </p>

    <p>
      <strong>Points:</strong>
      <%= @post.points %>
    </p>

    <p>
      <strong>Instructions:</strong>
      <%= @post.instructions %>
    </p>

    <div class="actions">
      <%= link_to 'Posts', posts_path %> | <%= render :file => "./shared/_actions.html.erb" %><br/>
    </div>

  </main>
</div>