<div class="full">
  <main class="main">
    <p id="notice"><%= notice %></p>

    <h1>Assignments</h1>

    <table>
      <thead>
        <tr>
          <th>Classroom</th>
          <th>Topic</th>
          <th>Course</th>
          <th>Teacher</th>
          <th>Type</th>
          <th>Title</th>
          <th>Start date</th>
          <th>End date</th>
          <th>Posted date</th>
          <th>Due date</th>
          <th>Graded</th>
          <th>Points</th>
          <th>Instructions</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @assignments.each do |assignment| %>
          <tr>
            <td><%= assignment.classroom_id %></td>
            <td><%= assignment.topic_id %></td>
            <td><%= assignment.course_id %></td>
            <td><%= assignment.teacher_id %></td>
            <td><%= assignment.type %></td>
            <td><%= assignment.title %></td>
            <td><%= assignment.start_date %></td>
            <td><%= assignment.end_date %></td>
            <td><%= assignment.posted_date %></td>
            <td><%= assignment.due_date %></td>
            <td><%= assignment.graded %></td>
            <td><%= assignment.points %></td>
            <td><%= assignment.instructions %></td>
            <td><%= link_to 'Show', assignment %></td>
            <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
            <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="actions">
      <%= link_to 'New Assignment', new_assignment_path %> | <%= render :file => "./shared/_actions.html.erb" %><br/>
    </div>
  </main>
</div>