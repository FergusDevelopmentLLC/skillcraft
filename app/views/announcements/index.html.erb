f<div class="full">
  <main class="main">
    <h1>Announcements</h1>
    <p id="notice"><%= notice %></p>
    <% if !@announcements.empty? %>
    <table>
      
      <thead>
        <tr>
          <th>Course</th>
          <th>Teacher</th>
          <th>Title</th>
          <th>Posted date</th>
          <th>Due date</th>
          <th>Graded</th>
          <th>Points</th>
          <th>Instructions</th>
          <th>Responses</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @announcements.each do |announcement| %>
        <tr>
          <td><%= announcement.course.name %></td>
          <td><%= announcement.user.user_name %></td>
          <td><%= announcement.title %></td>
          <td><%= announcement.posted_date %></td>
          <td><%= announcement.due_date %></td>
          <td><%= announcement.graded %></td>
          <td><%= announcement.points %></td>
          <td><%= announcement.instructions %></td>
          <td><%= announcement.responses.count %></td>
          <td><%= link_to 'Show', announcement_path(announcement) %></td>
          <td><%= link_to 'Edit', edit_announcement_path(announcement) %></td>
          <td><%= link_to 'Destroy', announcement_path(announcement), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <% else %>
    <p style="text-align: center;">-chirp, chirp-</p>
    <% end %>
    <div class="actions">
      <%= link_to 'New Announcement', new_announcement_path %> | <%= render :partial => "actions" %><br />
    </div>
  </main>
</div>
