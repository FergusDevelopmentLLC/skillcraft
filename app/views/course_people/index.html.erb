<p id="notice"><%= notice %></p>

<h1>Course People</h1>

<table>
  <thead>
    <tr>
      <th>Person</th>
      <th>Classroom</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_people.each do |course_person| %>
      <tr>
        <td><%= course_person.person_id %></td>
        <td><%= course_person.classroom_id %></td>
        <td><%= link_to 'Show', course_person %></td>
        <td><%= link_to 'Edit', edit_course_person_path(course_person) %></td>
        <td><%= link_to 'Destroy', course_person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

