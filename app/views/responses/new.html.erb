<div class="full">
  <main class="main">

    <p id="notice"><%= notice %></p>

    <h1>A New <%=@response.type%></h1>
    <div style="text-align: center;margin: 1rem">addressed to the <%=@response.interaction.type%>:</div>
    <div style="text-align: center;margin: 1rem">"<%= link_to @response.interaction.title, announcement_path(@response.interaction) %>"</div>
    <% if @response && @response.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@response.errors.count, "error") %> prohibited this response from being saved:</h2>

      <ul>
        <% @response.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <%= form_with url: "/responses", model: @response, local: true, method: "post" do |form| %>

    <%= form.hidden_field :type, :value => @response.type%>

    <%= form.hidden_field :interaction_id, :value => @response.interaction_id %>

    <%= form.hidden_field :user_id, :value => @response.user_id %>
    
    <% if @response.type != "Question" %>
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
    <% end %>

    <div class="field">
      <%= form.label :what_is_your_question? %>
      <%= form.text_field :content %>
    </div>

    <% if @response.type != "Question" %>
    <div class="field">
      <%= form.label :score %>
      <%= form.number_field :score %>
    </div>

    <div class="field">
      <%= form.label :letter_grade %>
      <%= form.text_field :letter_grade %>
    </div>
    <% end %>

    <div class="actions">
      <%= form.submit %>
    </div>

    <% end %>



    <div class="actions">
      <%= link_to 'Responses', responses_path %> | <%= render :partial => "actions" %><br />
    </div>

  </main>
</div>