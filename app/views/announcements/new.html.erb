<div class="full">
  <main class="main">
    <h1>New Announcement</h1>

    <% if @announcement && @announcement.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@announcement.errors.count, "error") %> prohibited this announcement from being saved:</h2>

      <ul>
        <% @announcement.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <%= form_with url: "/announcements", model: @announcement, local: true, method: "post" do |form| %>

    <%= form.hidden_field :type, :value => 'Announcement'%>

    <div class="field">
      <%= form.label :course_id %>
      <%= collection_select(:announcement, :course_id, Course.all, :id, :name, prompt: true) %>
    </div>

    <div class="field">
      <%= form.label :teacher_id %>
      <%= collection_select(:announcement, :person_id, Teacher.all, :id, :user_name, prompt: true) %>
    </div>

    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>

    <div class="field date-select">
      <%= form.label :start_date %>
      <%= form.date_select :start_date %>
    </div>

    <div class="field date-select">
      <%= form.label :end_date %>
      <%= form.date_select :end_date %>
    </div>

    <div class="field date-select">
      <%= form.label :posted_date %>
      <%= form.date_select :posted_date %>
    </div>

    <div class="field date-select">
      <%= form.label :due_date %>
      <%= form.date_select :due_date %>
    </div>

    <div class="field graded">
      <%= form.label :graded %>
      <%= form.check_box :graded %>
    </div>

    <div class="field">
      <%= form.label :points %>
      <%= form.number_field :points %>
    </div>

    <div class="field">
      <%= form.label :instructions %>
      <%= form.text_field :instructions %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>

    <% end %>

    <div class="actions">
      <%= link_to 'Announcements', announcements_path %> | <%= render :file => "./shared/_actions.html.erb" %><br />
    </div>

  </main>
</div>