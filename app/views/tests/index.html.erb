<div class="full">
  <main class="main">
    <p id="notice"><%= notice %></p>

    <h1>Tests</h1>

    <table>
      <thead>
        <tr>
          <th>Classroom</th>
          <th>Topic</th>
          <th>Course</th>
          <th>Teacher</th>
          <th>Type</th>
          <th>Title</th>
          <th>Start date</th>
          <th>End date</th>
          <th>Posted date</th>
          <th>Due date</th>
          <th>Graded</th>
          <th>Points</th>
          <th>Instructions</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @tests.each do |test| %>
          <tr>
            <td><%= test.classroom_id %></td>
            <td><%= test.topic_id %></td>
            <td><%= test.course_id %></td>
            <td><%= test.teacher_id %></td>
            <td><%= test.type %></td>
            <td><%= test.title %></td>
            <td><%= test.start_date %></td>
            <td><%= test.end_date %></td>
            <td><%= test.posted_date %></td>
            <td><%= test.due_date %></td>
            <td><%= test.graded %></td>
            <td><%= test.points %></td>
            <td><%= test.instructions %></td>
            <td><%= link_to 'Show', test %></td>
            <td><%= link_to 'Edit', edit_tests_path(test) %></td>
            <td><%= link_to 'Destroy', test, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br/>
    <hr/>
    <br/>
    
    <div class="actions">
      <%= link_to  'New Test', new_test_path %> | <%= render :file => "./shared/_actions.html.erb" %><br/>
    </div>
  </main>
</div>