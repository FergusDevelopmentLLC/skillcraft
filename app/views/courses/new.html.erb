<div class="full">
  <main class="main">

    <p id="notice"><%= notice %></p>

    <h1>New Course</h1>

    <% if @course && @course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
        <% @course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <%= form_with url: "/courses", model: @course, local: true, method: "post" do |form| %>

    <%= form.hidden_field :type, :value => 'Course'%>

    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div class="field course-tuition-cost">
      <%= form.label :tuition_cost %>
      <%= form.text_field :tuition_cost %>
    </div>
      
    <div class="field featured">
      <%= form.label :featured %>
      <!-- #TODO, why is this not form.check_box_tag -->
      <%= check_box 'course', 'featured', {}, 'true', 'false' %>
    </div>
      
    <div class="field">
      <%= form.label :short_description %>
      <%= form.text_field :short_desc %>
    </div>
  
    <div class="field">
      <%= form.label :long_description %>
      <%= text_area(:course, :long_desc, cols: 20, rows: 40) %>
    </div>

    <div class="field">
      <%= form.label :code %>
      <%= form.text_field :code %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
    <% end %>

  </main>
</div>