<div class="full">
  <main class="main">
    <p id="notice"><%= notice %></p>

    <h1>Announcements</h1>

    <table>
      <thead>
        <tr>
          <th>Classroom</th>
          <th>Topic</th>
          <th>Course</th>
          <th>Teacher</th>
          <th>Type</th>
          <th>Title</th>
          <th>Start date</th>
          <th>End date</th>
          <th>Posted date</th>
          <th>Due date</th>
          <th>Graded</th>
          <th>Points</th>
          <th>Instructions</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @announcements.each do |announcement| %>
          <tr>
            <td><%= announcement.classroom_id %></td>
            <td><%= announcement.topic_id %></td>
            <td><%= announcement.course_id %></td>
            <td><%= announcement.teacher_id %></td>
            <td><%= announcement.type %></td>
            <td><%= announcement.title %></td>
            <td><%= announcement.start_date %></td>
            <td><%= announcement.end_date %></td>
            <td><%= announcement.posted_date %></td>
            <td><%= announcement.due_date %></td>
            <td><%= announcement.graded %></td>
            <td><%= announcement.points %></td>
            <td><%= announcement.instructions %></td>
            <td><%= link_to 'Show', announcement %></td>
            <td><%= link_to 'Edit', edit_announcements_path(announcement) %></td>
            <td><%= link_to 'Destroy', announcement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New announcement', new_announcements_path %>
  </main>
</div>