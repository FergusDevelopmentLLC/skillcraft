<div class="full">
  <main class="main">
    <p id="notice"><%= notice %></p>

    <h1><%= @people.first.type == "Student" ? "Students" : "Teachers" %></h1>

    <table>

      <thead>
        <tr>
          <th>Avatar</th>
          <th>User name</th>
          <th>First name</th>
          <th>Last name</th>
          <th>Email</th>
          <th>Courses</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @people.each do |person| %>
        <tr>
          <td><div style="width: 35px;"><%= cl_image_tag(person.avatar.url)  %></div></td>
          <td><%= person.user_name %></td>
          <td><%= person.first_name %></td>
          <td><%= person.last_name %></td>
          <td><%= person.email %></td>
          <td><%= person.courses.count %></td>
          <td><%= link_to 'Show', person_path(person) %></td>
          <td><%= link_to 'Edit', edit_person_path(person) %></td>
          <td><%= link_to 'Destroy', person_path(person), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <div class="actions">
      <% if @people.first.type == "Student" %>
        <%= link_to 'New Student', new_student_path %>
      <% else %>
        <%= link_to 'New Teacher', new_teacher_path %>
      <% end %> | <%= render :file => "./shared/_actions.html.erb" %><br />
    </div>

  </main>
</div>