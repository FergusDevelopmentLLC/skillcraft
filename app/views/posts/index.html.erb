<div class="full">
  <main class="main">
    <p id="notice"><%= notice %></p>

    <h1>Posts</h1>

    <table>
      <thead>
        <tr>
          <th>Classroom</th>
          <th>Topic</th>
          <th>Course</th>
          <th>Teacher</th>
          <th>Type</th>
          <th>Title</th>
          <th>Start date</th>
          <th>End date</th>
          <th>Posted date</th>
          <th>Due date</th>
          <th>Graded</th>
          <th>Points</th>
          <th>Instructions</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.classroom_id %></td>
            <td><%= post.topic_id %></td>
            <td><%= post.course_id %></td>
            <td><%= post.teacher_id %></td>
            <td><%= post.type %></td>
            <td><%= post.title %></td>
            <td><%= post.start_date %></td>
            <td><%= post.end_date %></td>
            <td><%= post.posted_date %></td>
            <td><%= post.due_date %></td>
            <td><%= post.graded %></td>
            <td><%= post.points %></td>
            <td><%= post.instructions %></td>
            <td><%= link_to 'Show', post %></td>
            <td><%= link_to 'Edit', edit_question_path(post) %></td>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="actions">
      <%= link_to 'New Post', new_post_path %> | <%= render :file => "./shared/_actions.html.erb" %><br/>
    </div>

  </main>
</div>